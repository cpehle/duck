join0 :: a -> a
join0 x = x

join0 :: IO (IO a) -> IO a
join0 x = join x

{-
-- In Haskell, join0 would be replaced with join.  The use
-- of join0 here avoids the need for return as a separate construct
-}

-- (>>=) :: m a -> (a -> b) -> join0 (m b)
m >>= f = join0 (map f m)

a >> b = a >>= \_ -> b

