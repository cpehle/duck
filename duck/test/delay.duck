import base

exec :: delay a -> a
exec x = force x

loop :: Int -> Bool
loop x = loop x

bad_if :: Bool -> a -> a -> a
bad_if c x y = (if) c x y

ss_if :: Bool -> delay a -> delay a -> a
ss_if b x y = force (bad_if b x y)

ss_and :: Bool -> delay Bool -> Bool
ss_and c x = case c of 
  True -> force x
  False -> c

ss_or :: Bool -> delay Bool -> Bool
ss_or c x = case c of
  True -> c
  False -> force x

ambiguous :: delay Bool -> a
ambiguous x = ()
ambiguous :: Int -> Int
ambiguous x = x

depend :: Bool -> delay Bool -> Bool
depend x y = x

depend :: Int -> Int -> Int
depend x y = x + y

lift_or x = ss_or x

apply = id

ignore x = True

fold :: (a -> delay b -> a) -> a -> List b -> a
fold _ x [] = x
fold f x (y:l) = fold f (f x y) l

test_exec = assert \ 3 == exec 3
test_delayed = assert \ 3 == force (delay 3)
test_if = assert \ ss_if True True (loop 0)
test_or = assert \ apply (ss_or True) (loop 1)
test_ambig1 = assert \ ambiguous 5 == 5
test_ambig2 = assert \ ambiguous (loop 0) == ()
test_depend1 = assert \ apply depend True (loop 1)
test_depend2 = assert \ depend 1 2 == 3
test_liftor = assert \ id (lift_or True) (loop 1)
test_fold = assert \ fold (||) False [False, True, False]

main = testAll
